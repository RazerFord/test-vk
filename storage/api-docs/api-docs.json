    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Projects"
                ],
                "summary": "Login",
                "description": "Log user and get auth token",
                "operationId": "login",
                "parameters": [
                    {
                        "name": "email",
                        "in": "query",
                        "description": "email user",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "test@vk.ru"
                        }
                    },
                    {
                        "name": "password",
                        "in": "query",
                        "description": "password user",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "password"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Authorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResourceTrue"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResourceFalse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Content",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/LoginResourceErrorValidation"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/logout": {
            "get": {
                "tags": [
                    "Projects"
                ],
                "summary": "Logout",
                "description": "Log the user out (Invalidate the token).",
                "operationId": "logout",
                "parameters": [
                    {
                        "name": "Authorization",
                        "in": "header",
                        "description": "Authorization token",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "Bearer 67pIVg4vAbmRZewXK4H0llU4XQtSy3VIxTpofgUOFfpcTfXfK1U0tSM3YNhytEw7BA7KzePrRJoQs3KlQSpzCer10lObTrep8wuZ"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
