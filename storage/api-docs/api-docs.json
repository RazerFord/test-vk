                        }
                    },
                    {
                        "name": "comment_id",
                        "in": "path",
                        "description": "comment id",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "tree",
                        "in": "path",
                        "description": "get tree",
                        "required": false,
                        "schema": {
                            "type": "boolean",
                            "default": 0,
                            "example": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "schema": {
